<div class="text-center">
  <h1>Sign up</h1>
</div>

<div class="row mt-3">
  <div class="col-sm-6 offset-sm-3">
    <%= form_with model: @user do |f| %>
      <%= render 'layouts/error_message', model: f.object %>
      
      <div class="mb-3">
        <%= f.label :name, 'Name', class: 'col-form-label' %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>  

      <div class="mb-3">
        <%= f.label :email, 'email', class: 'col-form-label' %>
        <%= f.email_field :email, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, 'password', class: 'col-form-label' %>
        <%= f.password_field :password, class: 'form-control' %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, 'confirmation', class: 'col-form-label' %>
        <%= f.password_field :password_confilmation, class: 'form-control' %>
      </div>

      <%= f.submit 'Sign up', class: 'btn btn-primary mx-auto' %>
    <% end %>
  </div>
</div>
